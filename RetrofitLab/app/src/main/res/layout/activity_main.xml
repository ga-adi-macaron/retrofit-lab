<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.serkanbal.retrofitlab.MainActivity">

    <EditText
        android:id="@+id/edittext_city"
        android:hint="Enter a city name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_search"
        android:layout_below="@id/edittext_city"
        android:text="Get Weather Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_city"
        android:text="City"
        android:layout_below="@id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_weather"
        android:text="Weather"
        android:layout_below="@id/textview_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_pressure"
        android:text="Pressure"
        android:layout_below="@id/textview_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_humidity"
        android:text="Humiditiy"
        android:layout_below="@id/textview_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_temperature"
        android:text="Temperature"
        android:layout_below="@id/textview_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
